@model TempleTours.Models.Appointment

<!-- Form That allows you to enter in Group information and then Reserves the time slot for your group-->
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="SignupForm">
            <div class="form-group">
                <label asp-for="GroupName" class="control-label">GroupName: </label>
                <input asp-for="GroupName" class="form-control"/>
                <br />
                <br />
            </div>
            <div class="form-group">
                <label asp-for="GroupSize" class="control-label">Number of Group Members: </label>
                <input asp-for="GroupSize" class="form-control" />
                <br />
                <br />
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label">Email: </label>
                <input asp-for="Email" class="form-control" />
                <br />
                <br />
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label">Phone Number: </label>
                <input asp-for="Phone" class="form-control" />
                <br />
                <br />
            </div>
            <input asp-for="TimeSlotId" type="hidden" value="@ViewBag.Timeslot" />
            <input asp-for="Time" type="hidden" value="null" />

            <div class="form-group">
                <button type="submit" class="form-control">Reserve Appointment</button>
            </div>
            <br />
            <!-- Validation summary for the Model-->
            <div asp-validation-summary="All"></div>
        </form>
    </div>
</div>
